<main class="container px-5 px-sm-0">
 <div class="row">
  <h4 class="m-4">投稿編集</h4>
  <div class="col-lg-12d-flex justify-content-center">

   <div class="container">

    <%= form_with model: @post, url: post_path do |f| %>

    <%= image_tag attachment_url(@post, :picture), size: "widthxheight", class: "img-fluid" %>

    <p class="mt-4"><%= f.label :picture, "イラスト画像" %></p>

    <%= f.attachment_field :picture, placeholder: "ファイルを選択", accept: "image/*" %>

    <p class="mt-4"><%= f.label :content, "投稿記事" %></p>

    <%= f.text_area :content, class: 'form-control', size: "20x10", placeholder: "投稿内容をここに" %>


    <div class="row justify-content-center">
     <div class="col-lg-7d-flex">
      <div class="container">

       <p class="mt-4"><%= f.select :status, Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"),k]}, {}, {class: "custom-select w-5"} %></p>

       <p class="m-5 text-center"><%= f.submit '変更を保存', method: :patch, class: 'btn btn-success btn-sm' %></p>

       <%= f.hidden_field :end_user_id, :value => current_end_user.id %>



      </div>
     </div>
    </div>
    <% end %>
   </div>
  </div>
 </div>
</main>