<main class="container">

 <div class="row">
  <div class="col-12 m-3">
   <%= link_to "新規投稿", new_post_path %>
   <h3>投稿一覧</h3>
  </div>
 </div>

 <div class="row">
  <% @posts.each do |post| %>
  <div class="col-md-3">
   <%= link_to post_path(post.id), class: "text-dark" do %>
    <%= image_tag attachment_url(post, :picture), size: "200x150" %>
   <% end %>
   <p><%= post.content %></p>
  </div>
  <% end %>
 </div>

</main>

