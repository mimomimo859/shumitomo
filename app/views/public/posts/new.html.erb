 <div class="row">
  <div class="col-lg-12">
   <div class="container m-5">
    <h4 class="m-4">新規投稿</h4>

    <%= form_with model: [@tag,@post], local:true, url: posts_path do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>

    <table>
     <%= f.hidden_field :end_user_id, :value => current_end_user.id %>
     <tr>
      <td><p class="m-4"><%= f.label :picture, "イラスト画像" %></p></td>
      <td><%= f.attachment_field :picture, placeholder: "ファイルを選択", accept: "image/*" %></td>
     </tr>
     <tr>
      <td><p class="m-4"><%= f.label :content, "投稿記事" %></p></td>
      <td><%= f.text_area :content, class: 'form-control', size: "20x10" %></td>
     </tr>
     <tr>
      <td><p class="m-4"><%= f.label :tag_name, "タグ" %></p></td>
      <td>
       <%=f.text_area :tag_name, placeholder: "先頭には”＃”をつけてタグを入力してください。複数タグをつけるときは、”,”で区切ってください。", size: "40x7"%>
      </td>
     </tr>
     <tr>
      <td></td>
      <td>
       <div class="form-group">
        <%= f.select :status, Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"),k]}, {}, {class: "custom-select w-26"} %>
       </div>
        <%= f.submit '新規投稿', class: 'btn btn-success btn-sm' %>
      </td>
     </tr>
    </table>

    <% end %>

   </div>
  </div>
 </div>